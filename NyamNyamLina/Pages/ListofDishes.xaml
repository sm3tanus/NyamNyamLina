<Page x:Class="NyamNyamLina.Pages.ListofDishes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NyamNyamLina.Pages"
      mc:Ignorable="d" 
      xmlns:converters="clr-namespace:NyamNyamLina.Converters"
       d:DesignHeight="1080" d:DesignWidth="1280"
      Title="Dishes">

    <Grid>
        <Grid.Resources>
            <converters:ColorConverter x:Key="DishColor"></converters:ColorConverter>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2"
                   FontSize="76"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">List of Dishes</TextBlock>


        <!--Category-->
        <TextBlock Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="32">Category:</TextBlock>
        <TextBlock Grid.Row="2"
                   Grid.Column="3"
                   FontSize="25"
                   Name="Tb"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"></TextBlock>
        <ComboBox
            Grid.Column="1"
            Width="240"
            Height="50"
            Grid.Row="1"
            BorderBrush="Transparent"
            Background="#d5c847"
            Foreground="Black"
            FontSize="22"
            Name="CategoryCb" SelectionChanged="CategoryCb_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>


        <!--Name-->
        <TextBlock Grid.Row="1"
                   Grid.Column="3"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="32">Name:</TextBlock>

        <TextBox Grid.Column="4"
                 Grid.Row="1"
                 Width="240"
                 FontSize="22"
                 Height="50"
                 Background="#d5c847"
                 BorderBrush="Transparent"
                 Name="NameTb" TextChanged="NameTb_TextChanged">
        </TextBox>

        <!--Check-->
        <CheckBox Grid.Row="2"
                  FontSize="22"
                  Grid.ColumnSpan="2"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Name="ShowCb" Checked="ShowCb_Checked" 
                  Unchecked="ShowCb_Checked">Show only dishes with available ingredients</CheckBox>


        <!--Slider-->
        <Slider Grid.Column="4"
                HorizontalAlignment="Center"
                Grid.Row="2"
                VerticalAlignment="Center"
                Width="240" 
                Name="Slider" ValueChanged="Slider_ValueChanged"
                TickFrequency="2"
                />
        
        <!--ListView-->
        <ListView Background="#fed7c1"
          x:Name="dishesLv"
          Grid.ColumnSpan="5"
          Grid.Row="3"
          Grid.RowSpan="5"
          Margin="10"
          BorderBrush="Transparent" SelectionChanged="dishesLv_SelectionChanged">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate >
                    <Border BorderBrush="#d5c847"
                    BorderThickness="5"
                    CornerRadius="0"
                            Background="Transparent"
                            Height="300"
                            Width="400">
                        <StackPanel Orientation="Vertical" 
                            HorizontalAlignment="Center"
                            Width="400"
                            Height="300"
                            Background="Transparent"
                            Cursor="Hand">
                            <Grid>
                                <Image
                               Height="300"
                               Name="nameDishImg"
                               Width="400"
                               Stretch="Fill">
                                    <Image.Source>
                                        <FormatConvertedBitmap Source="{Binding Image}"
                                                               DestinationFormat="{Binding ., Converter={StaticResource DishColor}}"></FormatConvertedBitmap>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="{Binding Name}"
                                   FontSize="20"
                                   Margin="0 10 0 10 "
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="#fdb249"
                                   FontWeight="Bold"
                                   VerticalAlignment="Top"
                                   Background="#66000000"
                                   Padding="5"/>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0 0 0 20">
                                    <TextBlock Text="1 portion ="
                                   FontWeight="DemiBold"
                                   FontSize="20"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Left"
                                   Foreground="#fdb249"
                                   Background="#66000000"
                                   Padding="5"/>
                                    <TextBlock Text="{Binding FinalPriceInDollars}"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   Foreground="#fdb249"
                                   FontWeight="DemiBold"
                                   FontSize="20"
                                   VerticalAlignment="Bottom"
                                   Background="#66000000"
                                   Padding="5"/>
                                    <TextBlock Text="$"
                                   FontWeight="DemiBold"
                                   FontSize="20"
                                   Foreground="#fdb249"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   Background="#66000000"
                                   Padding="5"/>
                                </StackPanel>
                               
                            </Grid>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
